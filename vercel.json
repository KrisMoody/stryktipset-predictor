{
  "version": 2,
  "buildCommand": "yarn vercel-build && node scripts/upload-source-maps.js",
  "devCommand": "yarn dev",
  "installCommand": "yarn install",
  "framework": "nuxtjs",
  "outputDirectory": ".output/public",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./",
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
